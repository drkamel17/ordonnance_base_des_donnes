{
  "manifest_version": 3,
  "name": "Certificats Médicaux Integration",
  "version": "1.0",
  "description": "Extension pour intégrer les certificats médicaux avec l'API locale",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://localhost/*",
    "file:///*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Certificats Médicaux"
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://localhost:*/*",
      "file:///*",
      "http://127.0.0.1:*/*",
      "https://127.0.0.1:*/*",
      "<all_urls>"
    ]
  }
}